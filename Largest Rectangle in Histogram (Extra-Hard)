Largest Rectangle in Histogram (Leetcode)
https://leetcode.com/problems/largest-rectangle-in-histogram/description/

//Code passes all test cases in Leetcode

class Solution {
public:
    int largestRectangleArea(vector<int>& heights) {
        int maxA = 0;
        int n = heights.size();
        stack<int> st;

        for(int i = 0; i<= n; i++){
            int currH;
            if(i == n){currH = 0;}
            else{currH = heights[i];}

            while(!st.empty() && currH < heights[st.top()]){
                int index = st.top();
                st.pop();

                int bHeight = heights[index];

                int leftBoundary;
                if(st.empty()){leftBoundary = -1;}
                else{leftBoundary = st.top();}

                int w = i - leftBoundary - 1;
                int a = bHeight * w;
                if(a > maxA){maxA = a;}
            }
            st.push(i);
        }
        return maxA;
    }
};
